<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        body{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        table,td {
            border: 1px solid black;
            text-align: center;
            
        }
        td#one{
            background-color: aqua;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
        td#two{
            background-color: blueviolet;
            color: aliceblue;
            font-weight: bolder;
        }
        td#three{
            background-color: rgb(22, 23, 22);
            color: aliceblue;
            font-weight: bolder;
        }
        td#same{
            background-color: coral;
            color: white;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <td id="same">id</td>
            <td id="same">Email</td>
            <td id="same">Username</td>
            <td id="same">Update user</td>
        </tr>
        <% for(user of users){ %>
    <tr>
        <td id="one"><%= user.id %></td>
        <td id="two"><%= user.email %></td>
        <td id="three"><%= user.username %></td>
        <td>
        <form method="GET" action="/user/<%= user.id %>/edit">
            <button>Edit</button>
        </form>
        </td>
    </tr>
<% } %>
    </table>
</body>
</html>
